{
    "style":
    {
        "widgets":
        [{
            "background":
            [{
                "instantiate": "nine_slices",
                "widgets/sprite":
                [{
                    "frame": "sprites/menu/yellow-button.png",
                    "insets.left": 20,
                    "insets.top": 20,
                    "insets.width": 30,
                    "insets.height": 30
                }]
            }],

            "label":
            [
                "font/regular",
                {
                    "instantiate": "ax::Label",
                    "font.size": 32,
                    "font.color": "#ffffff",
                    "shadow.color": "#1b1b1b",
                    "shadow.offset.y": -4,
                    "outline.color": "#1b1b1b",
                    "outline.size": 2,
                    "z-order": 10
                }
            ]
        }],

        "bounds":
        [{
            "background": [ "layout/fill" ],

            "label":
            [{
                "anchor.x": 0.5,
                "anchor.y": 0.5,
                "anchor.reference.x": 0.5,
                "anchor.reference.y": 0.5
            }]
        }],

        "display.pressed":
        [{
            "background/color": "#ffffff"
        }],

        "display.release":
        [{
            "background/color": "#ffffff"
        }],

        "display.disabled":
        [{
            "background/color": "#ffffff"
        }],

        "sound.click": "tick"
    }
}


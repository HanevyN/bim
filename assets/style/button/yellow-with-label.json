{
    "style":
    {
        "widgets":
        [{
            "background":
            [{
                "instantiate": "nine_slices",
                "widgets/sprite":
                [{
                    "frame": "sprites/menu/yellow-button.png",
                    "insets.left": 20,
                    "insets.top": 20,
                    "insets.width": 30,
                    "insets.height": 30
                }]
            }],

            "decorum":
            [{
                "instantiate": "clipping_node",
                "z-order": 5,
                "widgets":
                [{
                    "clipping_node": [],

                    "stencil":
                    [{
                        "instantiate": "nine_slices",
                        "anchor-point.x": 0,
                        "anchor-point.y": 0,
                        "widgets/sprite":
                        [{
                            "frame": "sprites/menu/thick-button-mask.png",
                            "insets.left": 20,
                            "insets.top": 20,
                            "insets.width": 30,
                            "insets.height": 30
                        }]
                    }],

                    "stars":
                    [{
                        "instantiate": "texture",
                        "parent": "clipping_node",
                        "widgets/sprite/frame": "texture/stars.png",
                        "scroll-per-second.x": 20,
                        "scroll-per-second.y": 10,
                        "rotation": -2
                    }]
                }],

                "bounds":
                [{
                    "clipping_node": [ "layout/fill" ],
                    "stencil": [ "layout/fill" ],
                    "stars": [ "layout/fill" ]
                }]
            }],

            "label":
            [
                "font/regular",
                {
                    "instantiate": "ax::Label",
                    "font.size": 32,
                    "font.color": "#ffffff",
                    "shadow.color": "#1b1b1b",
                    "shadow.offset.y": -4,
                    "outline.color": "#1b1b1b",
                    "outline.size": 2,
                    "z-order": 10
                }
            ]
        }],

        "bounds":
        [{
            "background": [ "layout/fill" ],
            "decorum": [ "layout/fill" ],

            "label":
            [{
                "anchor.x": 0.5,
                "anchor.y": 0.5,
                "anchor.reference.x": 0.5,
                "anchor.reference.y": 0.5
            }]
        }],

        "display.pressed":
        [{
            "background/color": "#ffffff"
        }],

        "display.release":
        [{
            "background/color": "#ffffff"
        }],

        "display.disabled":
        [{
            "background/color": "#ffffff"
        }],

        "sound.click": "tick"
    }
}


{
    "style":
    {
        "widgets":
        [{
            "container/instantiate": "ax::Node",

            "background":
            [{
                "instantiate": "ax::LayerColor",
                "parent": "container",
                "color": "black",
                "opacity": 0.6,
                "z-order": -2000
            }],

            "frame-container":
            [{
                "instantiate": "ax::Node",
                "parent": "container"
            }],

            "frame-background":
            [{
                "instantiate": "nine_slices",
                "parent": "frame-container",
                "widgets/sprite":
                [{
                    "frame": "sprites/popup/popup-fill-146-146.png",
                    "color": "gable-green",
                    "insets.left": 146,
                    "insets.top": 146,
                    "insets.width": 1,
                    "insets.height": 1
                }],
                "z-order": -1000
            }],

            "frame-clipping-node":
            [{
                "instantiate": "clipping_node",
                "parent": "frame-container",
                "z-order": -999,
                "widgets":
                [{
                    "clipping_node":
                    [{
                        "cascade-color": true
                    }],

                    "stencil":
                    [{
                        "instantiate": "nine_slices",
                        "anchor-point.x": 0,
                        "anchor-point.y": 0,
                        "widgets/sprite":
                        [{
                            "frame": "sprites/popup/popup-fill-146-146.png",
                            "insets.left": 146,
                            "insets.top": 146,
                            "insets.width": 1,
                            "insets.height": 1
                        }]
                    }],

                    "pattern":
                    [{
                        "instantiate": "texture",
                        "parent": "clipping_node",
                        "widgets/sprite/frame": "texture/popup-background-pattern.png",
                        "scroll-per-second.x": 20,
                        "scroll-per-second.y": 10,
                        "rotation": -2,
                        "color": "plantation",
                        "z-order": 10
                    }]
                }],

                "bounds":
                [{
                    "clipping_node": [ "layout/fill" ],
                    "stencil": [ "layout/fill" ],
                    "pattern": [ "layout/fill" ]
                }]
            }],

            "frame-border":
            [{
                "instantiate": "nine_slices",
                "parent": "frame-container",
                "widgets/sprite":
                [{
                    "frame": "sprites/popup/popup-border-146-146.png",
                    "color": "gable-green",
                    "insets.left": 146,
                    "insets.top": 146,
                    "insets.width": 1,
                    "insets.height": 1
                }],
                "z-order": -998
            }],

            "message":
            [
                "font/bold",
                {
                    "parent": "frame-container",
                    "font.size": 50,
                    "font.color": "white",
                    "align.horizontal": "center",
                    "wrap": true,
                    "z-order": -10
                }
            ],

            "yes_button":
            [
                "button/yellow-with-label",
                {
                    "parent": "frame-container",
                    "widgets/label/text.i18n": "OK",
                    "z-order": 0
                }
            ]
        }],

        "bounds":
        [{
            "background": [ "layout/fill" ],
            "container": [ "layout/fill" ],

            "frame-container":
            [{
                "anchor.x": 0.5,
                "anchor.y": 0.5,
                "anchor-reference.x": 0.5,
                "anchor-reference.y": 0.5,
                "width.percents": 95,
                "height.percents": 35
            }],

            "frame-background": [ "layout/fill" ],
            "frame-clipping-node": [ "layout/fill" ],
            "frame-border": [ "layout/fill" ],

            "message":
            [{
                "anchor.x": 0.5,
                "anchor.y": 0.5,
                "anchor.reference.x": 0.5,
                "anchor.reference.y": 0.55,
                "width.percents": 75,
                "height.percents": 90
            }],

            "yes_button":
            [{
                "anchor.x": 0.5,
                "anchor.y": 0.5,
                "anchor.reference.x": 0.5,
                "anchor.reference.y": 0.2,
                "width.percents": 35,
                "height.percents": 25
            }]
        }]
    }
}
